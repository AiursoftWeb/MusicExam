@model Aiursoft.MusicExam.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="my-4">@Localizer["Available Exams"]</h1>

    @foreach (var school in Model.Schools)
    {
            <h2 class="mt-5 text-primary">@school.Name</h2>

        var levels = school.Papers
            .GroupBy(p => p.Level ?? "Uncategorized")
            .OrderBy(g => g.Key);

        foreach (var levelGroup in levels)
        {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0">@levelGroup.Key</h4>
                        </div>
                        <div class="card-body">
                    @{
                        var categories = levelGroup
                            .GroupBy(p => p.Category ?? "General")
                            .OrderBy(g => g.Key);
                    }

                    @foreach (var categoryGroup in categories)
                    {
                                    <h5 class="card-title mt-3 border-bottom pb-2">@categoryGroup.Key</h5>
                                    <div class="list-group list-group-flush mb-3">
                            @foreach (var paper in categoryGroup.OrderBy(p => p.Title))
                            {
                                                <a asp-controller="Exam" asp-action="Take" asp-route-id="@paper.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    @paper.Title
                                                    <span class="badge bg-primary rounded-pill">Start</span>
                                                </a>
                            }
                                    </div>
                    }
                        </div>
                    </div>
        }
    }
</div>
