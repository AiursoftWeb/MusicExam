@model Aiursoft.MusicExam.Models.HomeViewModels.IndexViewModel

<vc:marketing-navbar></vc:marketing-navbar>

<section class="landing-intro text-bg-dark pt-5 pt-lg-6 pb-5 pb-lg-7">
    <div class="landing-intro-content container h-100">
        <div class="row align-items-center h-100">
            <div class="col-lg-5 mx-auto">
                <span class="badge badge-subtle-primary p-1">@Localizer["Open Source"]</span>
                <span class="badge badge-subtle-primary p-1">@Localizer["Free"]</span>
                <h1 id="main-slogan" class="my-4 text-white" style="font-size: 3rem;">
                    @Localizer["Master Your Music Theory"]
                </h1>
                <p class="text-lg text-white-50">@Localizer["A comprehensive platform designed to help you excel in your music exams. Practice with thousands of questions from official sources."]</p>
                <div class="my-4">
                    <a class="btn btn-primary btn-lg btn-pill" asp-controller="Dashboard" asp-action="Index">@Localizer["Start Practice"]</a>
                    <a asp-controller="Manage" asp-action="ExamHistory" class="btn btn-outline-primary btn-lg btn-pill">@Localizer["Progress"]</a>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-flex mx-auto text-center">
                <div class="landing-intro-screenshot">
                     <!-- Placeholder for screenshot if available, or just remove -->
                     <i data-lucide="music" style="width: 200px; height: 200px; color: white;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-6">
    <div class="container">
        <div class="mb-5 text-center">
            <span class="text-uppercase text-primary text-sm fw-medium mb-1 d-block">@Localizer["Features"]</span>
            <h2 class="h1">@Localizer["Why choose Music Exam Platform?"]</h2>
            <p class="text-muted fs-lg">@Localizer["Comprehensive Question Bank, Realistic Mock Exams, Detailed Analytics."]
            </p>
        </div>
        <div class="row text-start">
            <div class="col-12 col-md-4">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature">
                        <i data-lucide="library"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mt-0">@Localizer["Comprehensive Question Bank"]</h4>
                        <p class="fs-lg">@Localizer["Practice with thousands of questions from official sources, covering all levels and topics."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature">
                        <i data-lucide="file-check"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mt-0">@Localizer["Realistic Mock Exams"]</h4>
                        <p class="fs-lg">@Localizer["Simulate the real exam environment with timed mock tests and get a feel for the actual challenge."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature">
                        <i data-lucide="trending-up"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mt-0">@Localizer["Detailed Analytics"]</h4>
                        <p class="fs-lg">@Localizer["Track your performance, view detailed score reports, and identify your strengths and weaknesses."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature">
                        <i data-lucide="music"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mt-0">@Localizer["Sight-Singing Practice"]</h4>
                        <p class="fs-lg">@Localizer["Sharpen your sight-singing skills with a vast library of melodies and interactive exercises."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature">
                        <i data-lucide="smartphone"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mt-0">@Localizer["Cross-Platform Access"]</h4>
                        <p class="fs-lg">@Localizer["Practice anytime, anywhere. Our platform is fully responsive and works on all your devices."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature">
                        <i data-lucide="award"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="mt-0">@Localizer["Official Curriculum"]</h4>
                        <p class="fs-lg">@Localizer["All content is based on the official curriculum of major music conservatories."]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<vc:marketing-footer></vc:marketing-footer>

@* ReSharper disable once Razor.SectionNotResolved *@
@section scripts {
    <script src="~/js/index.js" asp-append-version="true" defer></script>
}


@* ReSharper disable once Razor.SectionNotResolved *@
@section styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
}
