@using Aiursoft.WebTools
@using Aiursoft.MusicExam.Services.FileStorage
@model Aiursoft.MusicExam.Models.ChangesViewModels.ActiveUsersDetailsViewModel
@inject StorageService StorageService

<div class="row mb-2 mb-xl-3">
    <div class="col-auto d-none d-sm-block">
        <h3>@Localizer["Active Users Details"] - @Model.Report.Month.ToString("MMMM yyyy")</h3>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["Active Users List"]</h5>
        <h6 class="card-subtitle text-muted">@Localizer["Detailed list of users who were active this month and why."]</h6>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
            <tr>
                <th>@Localizer["User"]</th>
                <th>@Localizer["Active Time Spans"]</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var detail in Model.Report.ActiveUsers)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="@StorageService.RelativePathToInternetUrl(detail.User.AvatarRelativePath, Context, false)?w=72&square=true" 
                                 alt="@detail.User.DisplayName" 
                                 class="rounded-circle me-2" 
                                 width="48" height="48" 
                                 style="object-fit: cover;" />
                            <div>
                                <div class="fw-bold">@detail.User.DisplayName</div>
                                <div class="small text-muted">@detail.User.UserName</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        @foreach(var span in detail.ActiveTimes)
                        {
                            var activeDuration = span.End - span.Start;
                            <div class="mb-1">
                                <span class="badge bg-light text-dark border me-1">
                                    <i class="align-middle me-1" data-lucide="calendar"></i>
                                    <label data-utc-time="@span.Start.ToHtmlDateTime()"></label>
                                </span>
                                <i class="align-middle text-muted mx-1" data-lucide="arrow-right"></i>
                                <span class="badge bg-light text-dark border me-1">
                                    <label data-utc-time="@span.End.ToHtmlDateTime()"></label>
                                </span>
                                <span class="badge bg-primary-subtle text-primary">
                                    <i class="align-middle me-1" data-lucide="clock"></i>
                                    @activeDuration.ToString(@"dd\.hh\:mm\:ss")
                                </span>
                            </div>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ActiveUsers" class="btn btn-secondary">
        <i class="align-middle" data-lucide="arrow-left"></i> @Localizer["Back to Statistics"]
    </a>
</div>
