@using Aiursoft.WebTools
@model Aiursoft.MusicExam.Models.ManageViewModels.ExamHistoryViewModel

<h1 class="h3 mb-3">@Localizer["My Exam History"]</h1>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">@Localizer["History"]</h5>
    </div>
    <div class="card-body">
        @if (!Model.Submissions.Any())
        {
            <div class="alert alert-info">
                @Localizer["You haven't taken any exams yet."]
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Exam"]</th>
                            <th>@Localizer["Score"]</th>
                            <th>@Localizer["Date"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var submission in Model.Submissions)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Exam" asp-action="Review" asp-route-id="@submission.Id">
                                        @submission.Paper?.Title
                                    </a>
                                </td>                                <td>
                                    @if (submission.Score.HasValue)
                                    {
                                        var totalQuestions = submission.Paper?.Questions?.Count ?? 0;
                                        var percentage = totalQuestions > 0 ? (double)submission.Score.Value / totalQuestions * 100 : 0;
                                        
                                        <div>
                                            <span class="badge @(submission.Score == totalQuestions ? "bg-success" : "bg-primary")">
                                                @submission.Score / @totalQuestions
                                            </span>
                                        </div>
                                        <div class="progress mt-2" style="height: 5px; width: 100px;">
                                            <div class="progress-bar @(submission.Score == totalQuestions ? "bg-success" : "bg-primary")" 
                                                 role="progressbar" 
                                                 style="width: @percentage%" 
                                                 aria-valuenow="@submission.Score" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="@totalQuestions">
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Localizer["N/A"]</span>
                                    }
                                </td>
                                <td>
                                    <label data-utc-time="@submission.SubmissionTime.ToHtmlDateTime()" class="text-monospace"></label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
