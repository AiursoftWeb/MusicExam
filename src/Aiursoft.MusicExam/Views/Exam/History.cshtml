@using Aiursoft.WebTools
@model Aiursoft.MusicExam.Models.ExamViewModels.HistoryViewModel
@{
    ViewData["Title"] = Localizer["My Exam Records"];
}

<div class="container my-5">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            @if (!Model.Submissions.Any())
            {
                <div class="alert alert-info">
                    @Localizer["You haven't taken any exams yet."]
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@Localizer["Exam"]</th>
                                <th>@Localizer["Score"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Action"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var submission in Model.Submissions)
                            {
                                <tr>
                                    <td>@submission.Paper.Title</td>
                                    <td>
                                        @if (submission.Score.HasValue)
                                        {
                                            <span class="badge bg-primary">@submission.Score</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Localizer["N/A"]</span>
                                        }
                                    </td>
                                    <td>
                                        <label data-utc-time="@submission.SubmissionTime.ToHtmlDateTime()" class="text-monospace"></label>
                                    </td>
                                    <td>
                                        <!-- Future: Link to detailed review if implemented -->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
