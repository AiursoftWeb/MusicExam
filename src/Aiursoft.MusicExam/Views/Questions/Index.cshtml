@model Aiursoft.MusicExam.Models.QuestionsViewModels.IndexViewModel
@{
    ViewData["Title"] = Localizer["Question Management"];
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-auto ms-auto text-end mt-n1">
            <a asp-action="CreatePaper" class="btn btn-primary">@Localizer["Create New Exam Paper"]</a>
        </div>
    </div>

    @foreach (var school in Model.Schools)
    {
        var totalPapers = school.Papers.Count();
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <h5 class="card-title mb-0">
                    <i class="align-middle me-2" data-lucide="school"></i>@school.Name
                </h5>
                <span class="badge bg-secondary rounded-pill">@totalPapers @Localizer["Papers"]</span>
            </div>
            <div class="card-body p-0">
                @if (!school.Papers.Any())
                {
                    <div class="text-muted p-4">@Localizer["No exam papers found in this school."]</div>
                }
                else
                {
                    var levels = school.Papers
                        .GroupBy(p => p.Level ?? "Uncategorized")
                        .OrderBy(g => g.Min(p => p.DisplayOrder))
                        .ThenBy(g => g.Min(p => p.Id));

                    <div class="accordion" id="accordion-school-@school.Id">
                        @foreach (var levelGroup in levels)
                        {
                            var levelCollapseId = $"collapse-school-{school.Id}-level-{Math.Abs(levelGroup.Key.GetHashCode())}";
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading-@levelCollapseId">
                                    <button class="accordion-button collapsed" type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@levelCollapseId"
                                            aria-expanded="false"
                                            aria-controls="@levelCollapseId">
                                        <i class="align-middle me-2" data-lucide="layers"></i>
                                        @Localizer["Level"]: @levelGroup.Key
                                        <span class="badge bg-info ms-2">@levelGroup.Count() @Localizer["Papers"]</span>
                                    </button>
                                </h2>
                                <div id="@levelCollapseId" class="accordion-collapse collapse"
                                     aria-labelledby="heading-@levelCollapseId"
                                     data-bs-parent="#accordion-school-@school.Id">
                                    <div class="accordion-body p-3">
                                        @{
                                            var categories = levelGroup
                                                .GroupBy(p => p.Category ?? "Uncategorized")
                                                .OrderBy(g => g.Min(p => p.DisplayOrder))
                                                .ThenBy(g => g.Min(p => p.Id));
                                        }

                                        <div class="accordion" id="accordion-cat-school-@school.Id-level-@Math.Abs(levelGroup.Key.GetHashCode())">
                                        @foreach (var categoryGroup in categories)
                                        {
                                            var catCollapseId = $"collapse-cat-{school.Id}-{Math.Abs(levelGroup.Key.GetHashCode())}-{Math.Abs(categoryGroup.Key.GetHashCode())}";
                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="heading-@catCollapseId">
                                                    <button class="accordion-button collapsed" type="button"
                                                            data-bs-toggle="collapse"
                                                            data-bs-target="#@catCollapseId"
                                                            aria-expanded="false"
                                                            aria-controls="@catCollapseId">
                                                        <i class="align-middle me-2" data-lucide="folder"></i>
                                                        @categoryGroup.Key
                                                        <span class="badge bg-secondary ms-2">@categoryGroup.Count() @Localizer["Papers"]</span>
                                                    </button>
                                                </h2>
                                                <div id="@catCollapseId" class="accordion-collapse collapse"
                                                     aria-labelledby="heading-@catCollapseId"
                                                     data-bs-parent="#accordion-cat-school-@school.Id-level-@Math.Abs(levelGroup.Key.GetHashCode())">
                                                    <div class="accordion-body p-2">
                                                        <div class="accordion" id="accordion-paper-@school.Id-@Math.Abs(levelGroup.Key.GetHashCode())-@Math.Abs(categoryGroup.Key.GetHashCode())">
                                                            @foreach (var paper in categoryGroup.OrderBy(p => p.DisplayOrder).ThenBy(p => p.Id))
                                                            {
                                                                <div class="accordion-item border mb-2 rounded">
                                                                    <h2 class="accordion-header" id="heading-paper-@paper.Id">
                                                                        <button class="accordion-button collapsed py-2" type="button"
                                                                                data-bs-toggle="collapse"
                                                                                data-bs-target="#collapse-paper-@paper.Id"
                                                                                aria-expanded="false"
                                                                                aria-controls="collapse-paper-@paper.Id">
                                                                            <i class="align-middle me-2" data-lucide="file-text"></i>
                                                                            @paper.Title
                                                                            <span class="badge bg-primary ms-2">@paper.Questions.Count @Localizer["Questions"]</span>
                                                                        </button>
                                                                    </h2>
                                                                    <div id="collapse-paper-@paper.Id" class="accordion-collapse collapse"
                                                                         aria-labelledby="heading-paper-@paper.Id"
                                                                         data-bs-parent="#accordion-paper-@school.Id-@Math.Abs(levelGroup.Key.GetHashCode())-@Math.Abs(categoryGroup.Key.GetHashCode())">
                                                                        <div class="accordion-body">
                                                                            <div class="mb-3">
                                                                                <a asp-action="EditPaper" asp-route-id="@paper.Id" class="btn btn-sm btn-outline-secondary">@Localizer["Edit Paper"]</a>
                                                                                <a asp-action="Create" asp-route-id="@paper.Id" class="btn btn-sm btn-outline-primary">@Localizer["Add Question"]</a>
                                                                            </div>

                                                                            @if (!paper.Questions.Any())
                                                                            {
                                                                                <div class="text-muted">@Localizer["No questions yet."]</div>
                                                                            }
                                                                            else
                                                                            {
                                                                                <div class="list-group">
                                                                                    @foreach (var question in paper.Questions.OrderBy(q => q.Order))
                                                                                    {
                                                                                        <div class="list-group-item">
                                                                                            <div class="d-flex justify-content-between align-items-center">
                                                                                                <div>
                                                                                                    <h6 class="mb-1">
                                                                                                        @question.Content
                                                                                                        @if (!string.IsNullOrWhiteSpace(question.AssetPath))
                                                                                                        {
                                                                                                            if (question.AssetPath.EndsWith(".mp3") || question.AssetPath.EndsWith(".wav") || question.AssetPath.EndsWith(".ogg"))
                                                                                                            {
                                                                                                                <span class="badge bg-info ms-2" title="@Localizer["Audio"]"><i class="align-middle" data-lucide="music"></i></span>
                                                                                                            }
                                                                                                            else if (question.AssetPath.EndsWith(".mp4"))
                                                                                                            {
                                                                                                                <span class="badge bg-primary ms-2" title="@Localizer["Video"]"><i class="align-middle" data-lucide="video"></i></span>
                                                                                                            }
                                                                                                            else
                                                                                                            {
                                                                                                                <span class="badge bg-success ms-2" title="@Localizer["Image"]"><i class="align-middle" data-lucide="image"></i></span>
                                                                                                            }
                                                                                                        }
                                                                                                    </h6>
                                                                                                    <small class="text-muted">@question.QuestionType</small>
                                                                                                </div>
                                                                                                <div>
                                                                                                    <a asp-action="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-link">@Localizer["Edit"]</a>
                                                                                                    <form asp-action="Delete" asp-route-id="@question.Id" method="post" class="d-inline" onsubmit="return confirm('@Localizer["Are you sure to delete this question?"]');">
                                                                                                        <button type="submit" class="btn btn-sm btn-link text-danger">@Localizer["Delete"]</button>
                                                                                                    </form>
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    }
                                                                                </div>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>
