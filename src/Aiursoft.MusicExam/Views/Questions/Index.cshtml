@model Aiursoft.MusicExam.Models.QuestionsViewModels.IndexViewModel
@{
    ViewData["Title"] = Localizer["Question Management"];
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-auto ms-auto text-end mt-n1">
            <a asp-action="CreatePaper" class="btn btn-primary">@Localizer["Create New Exam Paper"]</a>
        </div>
    </div>

    @foreach (var school in Model.Schools)
    {
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title mb-0">@school.Name</h5>
            </div>
            <div class="card-body">
                @if (!school.Papers.Any())
                {
                    <div class="text-muted">@Localizer["No exam papers found in this school."]</div>
                }
                else
                {
                    <div class="accordion" id="accordion-school-@school.Id">
                        @foreach (var paper in school.Papers)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading-paper-@paper.Id">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-paper-@paper.Id" aria-expanded="false" aria-controls="collapse-paper-@paper.Id">
                                        <span class="badge bg-secondary me-2">@paper.Category</span>
                                        @paper.Title
                                        <span class="badge bg-info ms-2">@Localizer["Level"]: @paper.Level</span>
                                    </button>
                                </h2>
                                <div id="collapse-paper-@paper.Id" class="accordion-collapse collapse" aria-labelledby="heading-paper-@paper.Id" data-bs-parent="#accordion-school-@school.Id">
                                    <div class="accordion-body">
                                        <div class="mb-3">
                                            <a asp-action="EditPaper" asp-route-id="@paper.Id" class="btn btn-sm btn-outline-secondary">@Localizer["Edit Paper"]</a>
                                            <a asp-action="Create" asp-route-id="@paper.Id" class="btn btn-sm btn-outline-primary">@Localizer["Add Question"]</a>
                                        </div>

                                        @if (!paper.Questions.Any())
                                        {
                                            <div class="text-muted">@Localizer["No questions yet."]</div>
                                        }
                                        else
                                        {
                                            <div class="list-group">
                                                @foreach (var question in paper.Questions.OrderBy(q => q.Order))
                                                {
                                                    <div class="list-group-item">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <h6 class="mb-1">
                                                                    @question.Content
                                                                    @if (!string.IsNullOrWhiteSpace(question.AssetPath))
                                                                    {
                                                                        if (question.AssetPath.EndsWith(".mp3") || question.AssetPath.EndsWith(".wav") || question.AssetPath.EndsWith(".ogg"))
                                                                        {
                                                                            <span class="badge bg-info ms-2" title="@Localizer["Audio"]"><i class="align-middle" data-lucide="music"></i></span>
                                                                        }
                                                                        else if (question.AssetPath.EndsWith(".mp4"))
                                                                        {
                                                                            <span class="badge bg-primary ms-2" title="@Localizer["Video"]"><i class="align-middle" data-lucide="video"></i></span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-success ms-2" title="@Localizer["Image"]"><i class="align-middle" data-lucide="image"></i></span>
                                                                        }
                                                                    }
                                                                </h6>
                                                                <small class="text-muted">@question.QuestionType</small>
                                                            </div>
                                                            <div>
                                                                <a asp-action="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-link">@Localizer["Edit"]</a>
                                                                <form asp-action="Delete" asp-route-id="@question.Id" method="post" class="d-inline" onsubmit="return confirm('@Localizer["Are you sure to delete this question?"]');">
                                                                    <button type="submit" class="btn btn-sm btn-link text-danger">@Localizer["Delete"]</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>
