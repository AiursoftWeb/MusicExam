@model Aiursoft.MusicExam.Models.DashboardViewModels.IndexViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary mb-3">@Localizer["Available Exams"]</h1>
        <p class="lead text-muted">@Localizer["Select your school and level to start practicing"]</p>
    </div>

    <div class="accordion" id="examAccordion">
        @foreach (var school in Model.Schools)
        {
            var levels = school.Papers
            .GroupBy(p => p.Level ?? "Uncategorized")
            .OrderBy(g => g.Min(p => p.Id));

            foreach (var levelGroup in levels)
            {
                var collapseId = "collapse-" + Guid.NewGuid().ToString("N");
                <div class="accordion-item border-0 shadow-sm mb-3 rounded overflow-hidden">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed py-4 bg-white" type="button" data-bs-toggle="collapse"
                            data-bs-target="#@collapseId" aria-expanded="false">
                            <div class="d-flex flex-column flex-md-row align-items-md-center w-100">
                                <span class="badge bg-primary me-md-3 mb-2 mb-md-0 px-3 py-2 rounded-pill">@school.Name</span>
                                <span class="fs-5 fw-bold text-dark">@levelGroup.Key</span>
                            </div>
                        </button>
                    </h2>
                    <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#examAccordion">
                        <div class="accordion-body bg-light p-4">
                            @{
                                var categories = levelGroup
                                .GroupBy(p => p.Category ?? "General")
                                .OrderBy(g => g.Min(p => p.Id));
                            }

                            @foreach (var categoryGroup in categories)
                            {
                                <div class="mb-4 last-mb-0">
                                    <h5 class="text-uppercase text-muted fw-bold small ls-1 mb-3"><i
                                            class="bi bi-collection me-2"></i>@categoryGroup.Key</h5>
                                    <div class="row g-3">
                                        @foreach (var paper in categoryGroup.OrderBy(p => p.Id))
                                        {
                                            <div class="col-md-6 col-lg-4">
                                                <a asp-controller="Exam" asp-action="Take" asp-route-id="@paper.Id"
                                                    class="card h-100 text-decoration-none border-0 shadow-sm hover-lift transition-base">
                                                    <div class="card-body d-flex align-items-center justify-content-between p-3">
                                                        <span class="text-dark fw-medium text-truncate me-2"
                                                            title="@paper.Title">@paper.Title</span>
                                                        <span class="badge bg-light text-primary rounded-pill"><i
                                                                class="bi bi-play-fill text-primary"></i> Start</span>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
    }

    .ls-1 {
        letter-spacing: 1px;
    }

    .last-mb-0:last-child {
        margin-bottom: 0 !important;
    }
</style>
