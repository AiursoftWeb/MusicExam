@using Aiursoft.MusicExam.Authorization
@model Aiursoft.MusicExam.Models.UsersViewModels.IndexViewModel

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>@Model.PageTitle</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Create New User
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Display Name</th>
                <th>Email</th>
                <th>Activated</th>
                <th>Roles</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userWithRoles in Model.Users)
            {
                <tr>
                    <td>@userWithRoles.User.UserName</td>
                    <td>@userWithRoles.User.DisplayName</td>
                    <td>@userWithRoles.User.Email</td>
                    <td>
                        @if (userWithRoles.User.IsActivated)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>@string.Join(", ", userWithRoles.Roles)</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@userWithRoles.User.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@userWithRoles.User.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@userWithRoles.User.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>